<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text><text y='1.3em' x='0.2em' font-size='76' fill='#fff'>sf</text></svg>'>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    <!-- Navbar horizontale -->
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('accueil') }}">
                <img src="{{ asset('build/images/Logo.png') }}" alt="Logo" style="height: 60px; width: auto;">
                VillageGreen
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('accueil') }}"><i class="bi bi-house"></i> Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}"><i class="bi bi-pencil-square"></i> Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-box-seam"></i> Produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-cart"></i> Panier <span id="cart-count" class="badge bg-primary">0</span></a>
                    </li>
                    <!-- Insérez les autres liens de la barre verticale ici pour petits écrans -->
                    <li class="nav-item dropdown d-lg-none">
                        <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdownMobile" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Catégories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdownMobile">
                            <!-- Subcategories will be inserted here by JavaScript -->
                        </ul>
                    </li>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link" href="#services"><i class="bi bi-gear"></i> Services</a>
                    </li>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link" href="#about"><i class="bi bi-info-circle"></i> À propos</a>
                    </li>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link" href="#contact"><i class="bi bi-envelope"></i> Contact</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Recherche</button>
                </form>
                <!-- Bouton de déconnexion -->
                {% if app.user %}
                    <form class="d-flex" action="{{ path('logout') }}" method="post">
                        <button class="btn btn-outline-danger ms-2" type="submit">Déconnexion</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </nav>

    <!-- Barre de navigation verticale (affichée uniquement sur les grands écrans) -->
    <div class="vertical-navbar d-none d-lg-block">
        <ul class="nav flex-column">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" onclick="toggleDropdown(event)">
                    Catégories
                </a>
                <ul class="dropdown-menu" id="categoriesDropdownMenu" aria-labelledby="categoriesDropdown">
                    <!-- Subcategories will be inserted here by JavaScript -->
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#services"><i class="bi bi-gear"></i> Services</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#about"><i class="bi bi-info-circle"></i> À propos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#contact"><i class="bi bi-envelope"></i> Contact</a>
            </li>
        </ul>
    </div>

    {% block body %}
    <div class="container my-4 mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 text-center mt-5">
                <h1 class="mb-4">Bienvenue sur la page d'accueil</h1>

                <div class="row">
                    {# Section des catégories principales #}
                    <div class="col-12">
                        <h2 class="mb-4">Catégories</h2>
                        <div class="row">
                            {% for categorie in categories %}
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                                    <div class="card my-3 mx-auto border rounded">
                                        <a href="{{ path('categorie', {'id': categorie.id}) }}">
                                            <img src="https://picsum.photos/400/300" alt="" class="card-img-top">
                                            <div class="card-body">
                                                <h5 class="card-title fw-bold">{{ categorie.nom }}</h5>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    {# Section des sous-catégories aléatoires #}
                    <div class="col-12">
                        <h2 class="mt-5 mb-4">Sous-catégories</h2>
                        <div class="row">
                            {% for sousCategorie in randomSousCategories %}
                                <div class="col-12 col-sm-6 col-md-2 col-lg-3 col-xl-3">
                                    <div class="card my-3 mx-auto border rounded">
                                        <a href="{{ path('sous_categorie', {'categorieId': 1, 'sousCategorieId': 10}) }}">
                                            {% if sousCategorie.image is not null %}
                                                <img src="{{ sousCategorie.image }}" alt="" class="card-img-top">
                                            {% else %}
                                                <img src="https://picsum.photos/400/300" alt="" class="card-img-top">
                                            {% endif %}
                                            <div class="card-body">
                                                <h5 class="card-title">{{ sousCategorie.nom }}</h5>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {# Liens vers le dashboard et le profil #}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                    <div class="row mt-4 justify-content-center">
                        <div class="col-md-4">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_dashboard') }}" class="btn btn-primary btn-block">Accéder au tableau de bord</a>
                            {% endif %}
                            {% if is_granted('ROLE_USER') %}
                                <a href="{{ path('app_profil') }}" class="btn btn-primary btn-block">Accéder à votre profil</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endblock %}

    <!-- Footer -->
    <footer class="bg-transparent text-dark text-center py-3 fixed-bottom">
        <p>&copy; 2024 VillageGreen</p>
    </footer>

    <!-- Bootstrap JS et JS personnalisé -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        {{ encore_entry_script_tags('app') }}
        <script>
            function toggleDropdown(event) {
                const dropdownMenu = document.getElementById('categoriesDropdownMenu');
                dropdownMenu.classList.toggle('show');
            }

            // Activer le menu hamburger sur les petits appareils
            const navbarToggle = document.getElementById('navbarToggle');
            const navbarMenu = document.getElementById('navbarMenu');

            navbarToggle.addEventListener('click', function() {
                navbarMenu.classList.toggle('show');
            });
        </script>
    {% endblock %}
</body>
</html>









