{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 128 128"><text y="1.2em" font-size="96">⚫️</text><text y="1.3em" x="0.2em" font-size="76" fill="#fff">sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!-- Navbar horizontale -->
        <nav class="navbar navbar-expand-lg fixed-top navbar-border bg-dark navbar-dark">
            <a class="navbar-brand" href="{{ path('accueil') }}">
                <img src="{{ asset('build/images/Logo.png') }}" alt="Logo" style="height: 60px; width: auto;">
                VillageGreen
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHorizontal"
                aria-controls="navbarHorizontal" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarHorizontal">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('accueil') }}"><i class="bi bi-house"></i> Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-pencil-square"></i> Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-box-seam"></i> Produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-cart"></i> Panier <span id="cart-count"
                                class="badge bg-primary">0</span></a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Recherche</button>
                </form>
            </div>
        </nav>

        <!-- Barre de navigation verticale -->
        <div class="vertical-navbar d-flex flex-column justify-content-between">
            <ul class="nav flex-column">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="categoriesDropdown" role="button"
                        onclick="toggleDropdown(event)">
                        Catégories
                    </a>
                    <ul class="dropdown-menu w-100" id="categoriesDropdownMenu" aria-labelledby="categoriesDropdown">
                        <!-- Subcategories will be inserted here by JavaScript -->
                    </ul>
                </li>
            </ul>
            <ul class="nav flex-column mb-3">
                <li class="nav-item">
                    <a class="nav-link text-white" href="#services"><i class="bi bi-gear"></i> Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#about"><i class="bi bi-info-circle"></i> À propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#contact"><i class="bi bi-envelope"></i> Contact</a>
                </li>
            </ul>
        </div>

        {% block body %}{% endblock %}
        
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
        <footer class="bg-dark text-white text-center py-3 fixed-bot">
            <p>&copy; 2024 VillageGreen</p>
        </footer>
    </body>
</html>

